

<% provide(:title, @user.name) %>


<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
    <div class="col-md-8">
    <% if @user.solicitations.any? %>
      <h3>Solicitações (<%= @user.solicitations.count %>)</h3>
      <ol class="solicitations">
        <%= render @solicitations %>
      </ol>
    <% end %>
  </div>
</div>
<div class="col-md-8">
    <% if @user.reuses.any? %>
      <h3>Aproveitamentos (<%= @user.reuses.count %>)</h3>
      <ol class="solicitations">
        <%= render @reuses %>
      </ol>
    <% end %>
  </div>
</div>

<div class="row">
    <aside class="col-md-4">
     
     
        <%= render 'shared/solicitation_form' %>
      
   
  </div>

  <div class="row">
    <aside class="col-md-4">
     
     
        <%= render 'shared/reuse_form' %>
      
   
  </div>

